{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"],
    "paths": {
      "@shell/*": ["./node_modules/@rancher/shell/*"],
      "~/*": ["./*"]
    },
    "baseUrl": "."
  },
  "include": [
    "pkg/**/*.js",
    "pkg/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-pkg"
  ]
}

