          {
            "expr": "kube_pod_container_status_waiting_reason{namespace=\"demo-prophet\",pod=~\"crashy-app.*\",reason=~\"CrashLoopBackOff|ErrImagePull|ImagePullBackOff\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "cellOptions": {
                "type": "auto"
              },
              "inspect": false
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 0}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Value"},
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                },
                {
                  "id": "mappings",
                  "value": [
                    {
                      "options": {
                        "Running": {"color": "green", "index": 0},
                        "CrashLoopBackOff": {"color": "red", "index": 1},
                        "Error": {"color": "red", "index": 2},
                        "Pending": {"color": "yellow", "index": 3}
                      },
                      "type": "value"
                    }
                  ]
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "cellHeight": "sm",
          "footer": {
            "show": false,
            "reducer": ["sum"],
            "countRows": false
          }
        }
